version: "3"

services:
  deconz:
    image: ghcr.io/deconz-community/deconz-docker:latest
    container_name: deconz
    restart: always
    ports: 
      - 8080:80
      - 8443:443
    volumes:
      - /opt/deconz:/opt/deCONZ
      - '/etc/localtime:/etc/localtime:ro'

    environment:
      - DECONZ_WEB_PORT=80
      - DECONZ_WS_PORT=443
      - DEBUG_INFO=1
      - DEBUG_APS=0
      - DEBUG_ZCL=0
      - DEBUG_ZDP=0
      - DEBUG_OTA=0